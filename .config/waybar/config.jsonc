{
    "layer": "top",
    "modules-left": [
	"hyprland/workspaces",
	"submap"
    ],
    "modules-center": [
	"hyprland/window"
    ],
    "modules-right": [
	"pulseaudio",
	"clock#date",
	"clock#time"
    ],
    "hyprland/window": {
        "max-length": 50
    },
    "pulseaudio": {
	"format": "{icon} {volume}% {format_source}",
	"format": "{icon} {volume}% {format_source}",
	"format-muted": "🔇 {format_source}",

	"format-source": " {volume}%",
	"format-source-muted": "",

	"format-icons": {
		"headphones": "",
		"handsfree": "",
		"headset": "",
		"default": ["🔈", "🔉", "🔊"]
	},
	"on-click": "pavucontrol"
    },
    "clock#date": {
	"interval": 20,
	"format": "{:%e %b %Y}",
	"tooltip": false
    },
    "clock#time": {
	"interval": 10,
	"format": "{:%H:%M}",
	"tooltip": false
    }
}
